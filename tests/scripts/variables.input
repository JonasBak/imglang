// can declare a float variable
var test = 12.34;
print test;

// can assign variable to same type
test = 43.21;
print test;

// can redeclare a variable to another type
var test = fun() { };

var test = true;
print test;

// a variable declaration/assignment can use the old value assigned to that variable
var a = 2;
var a = a * 10;
print a;

var b = 1;
b = b + 1;
print b;

// functions can be assigned to variables and called
fun testFun() {
  print 555;
}
var testFunVar = testFun;
testFunVar();
